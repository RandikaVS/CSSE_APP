<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectSupplier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:backgroundTint="@color/theme_color"
        android:background="@drawable/top_title_corner"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_find_supplier"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suppliers"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="55dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result for : "/>
        <TextView
            android:id="@+id/search_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="search item"/>

    </LinearLayout>


            <ListView
                android:id="@+id/supplier_list"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


</LinearLayout>